{
  "compilerOptions": {
    "outDir": "./dist",

    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",

    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],

    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "skipLibCheck": true
  },
  "include": [
    "src",
    "api"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tsup.config.ts"
  ]
}